<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="idTextView" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/idTextView"
        tools:text="amountTextView" />

    <TextView
        android:id="@+id/termTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/amountTextView"
        tools:text="termTextView" />

    <TextView
        android:id="@+id/interestTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/termTextView"
        tools:text="interestTextView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dustyGray"
        app:layout_constraintTop_toBottomOf="@id/interestTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>